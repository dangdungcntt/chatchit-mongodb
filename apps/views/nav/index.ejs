<%  let urlAvatar = '';
    if (data.fbid !== '') {
        urlAvatar = 'https://graph.facebook.com/' + data.fbid + '/picture?type=large&redirect=true&width=40&height=40';
    } else {
        urlAvatar = '/images/default_avatar.jpg';
    }
%>
  <nav>
    <ul>
      <li class="menu">
        <a href="/" class="menu-item">Chat Chit</a>
      </li>
      <li class="menu">
        <a href="/create-room/" class="menu-item">Create Room</a>
      </li>
      <li class="menu">
        <a href="/list-room/" class="menu-item">List Room</a>
      </li>
      <li class="menu menu-right dropdown">
        <a class="menu-item"><i class="fa fa-caret-down"></i></a>
        <ul class="dropdown-content">
          <li><a href="#" class="menu-item">Setting</a></li>
          <li style="height: 1px; border-bottom: 1px solid #ccc "></li>
          <li><a id="btnLogout" class="menu-item">Logout</a></li>
        </ul>
      </li>
      <li class="menu menu-right">
        <!-- <div class="group-menu-item"> -->
        <a href="/profile/<%= data.username  %>" class="group-menu-item"><img src="<%= urlAvatar %>" class="avatar-topbar"><span class="user-name-topbar"><%= data.name  %></span></a>
        <div class="clear"></div>
        <!-- </div> -->

      </li>
    </ul>
  </nav>
  <script type="text/javascript">
    "use strict"; $(document).ready(() => { $("#btnLogout").click(() => { $.ajax({ url: "/logout", type: "post" }).then(() => { "undefined" !== typeof Storage && (localStorage.removeItem("token"), localStorage.removeItem("refreshToken")); location.href = "/"; }); }); $(".dropdown").click(function (a) { a.preventDefault(); var b = $(this).children(".dropdown-content"); $(".dropdown-content:visible").not(b).slideToggle(100), b.slideToggle(100); }); });
  </script>